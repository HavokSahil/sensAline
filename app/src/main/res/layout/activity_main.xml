<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/primary_border">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="120dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:width="0dp"
        android:layout_marginTop="30dp"/>

    <TableLayout
        android:id="@+id/SensorTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:stretchColumns="*"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/accelerometerHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="Accelerometer Data"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:id="@+id/accelerometerData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@id/DataX"
                android:text="X"
                android:layout_margin="3dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@drawable/table_background"
                />
            <TextView android:id="@+id/accelerometerDataY"
                android:text="Y"
                android:layout_margin="3dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@drawable/table_background"
                />
            <TextView android:id="@+id/accelerometerDataZ"
                android:text="Z"
                android:layout_margin="3dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@drawable/table_background"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/gyroscopeDataTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="Gyroscope Data"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:id="@+id/gyroscopeData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/DataX"
                android:text="X"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@drawable/table_background"
                />
            <TextView android:id="@+id/gyroscopeDataY"
                android:text="Y"
                android:layout_width="0dp"
                android:layout_margin="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@drawable/table_background"
                />
            <TextView android:id="@+id/gyroscopeDataZ"
                android:text="Z"
                android:layout_width="0dp"
                android:layout_margin="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@drawable/table_background"
                />
        </TableRow>
    </TableLayout>
    <EditText
        android:id="@+id/editIP"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="Enter IP Address"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/SensorTable"/>
    <TextView
        android:id="@+id/editPORT"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="Port: 4440"
        android:layout_below="@id/editIP"/>

    <Button
        android:id="@+id/udp_send_button"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/editPORT"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Send UDP"
        android:background="@drawable/button_background"/>
    <Button
        android:id="@+id/serial_send_button"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/udp_send_button"
        android:layout_below="@id/editPORT"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="Send Serial"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/line_detector_button"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/udp_send_button"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:text="Line Detector"/>

</RelativeLayout>
